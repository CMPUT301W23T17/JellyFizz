<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.QR_Code_Hunter" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/status_bar_color</item>
        <item name="colorPrimaryVariant">@color/status_bar_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
    <style name="choose_your">

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:textColor">
            #6F5A5A
        </item>

    </style>

    <style name="user_name">

        <item name="android:textSize">
            24sp
        </item>
    </style>

    <style name="scan_now">

        <item name="android:textSize">
            30sp
        </item>

        <item name="android:letterSpacing">
            -0.01

        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>


    <style name="qr_code">

        <item name="android:textSize">
            24sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>
    </style>

    <style name="welcome_use">

        <item name="android:textSize">
            30sp
        </item>

        <item name="android:textColor">
            #191847
        </item>

    </style>
</resources>