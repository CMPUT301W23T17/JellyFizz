<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/garbage_can_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:src="@drawable/ic_delete" />

        <ImageView
            android:id="@+id/return_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:src="@drawable/ic_undo" />

    </RelativeLayout>

    <ListView
        android:id="@+id/qr_code_lister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_buttons_layout"
        android:layout_above="@+id/delete_qrcode_list" />

    <Button
        android:id="@+id/delete_qrcode_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DELETE SELECTED CODES"
        android:backgroundTint="#FF0000"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

</RelativeLayout>
