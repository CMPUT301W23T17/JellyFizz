<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="@string/app_name"
    android:descendantFocusability="blocksDescendants">


    <TextView
        android:id="@+id/qr_code_visualRep"
        android:layout_width="137dp"
        android:layout_height="124dp"
        android:layout_gravity="center"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/unispace"
        android:text="  _--------------_  \n { ~~~)      (~~~ } \n{| ( + ) || ( + ) |}\n{|       ||       |}\n |      {__}      | \n |_              _| \n |    (______)    | \n |                | \n ------------------ "
        android:textColor="@color/teal_200"
        android:textIsSelectable="false"
        android:textSize="8.5sp"
        android:gravity="center"
        android:textStyle="bold" />

        <LinearLayout
            android:layout_width="215dp"
            android:layout_height="106dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_gravity="center"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:id="@+id/code_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="RedBayGasArtOwlJawOakIceMudSaw"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="10sp"
                android:gravity="start"
                android:textStyle="bold"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textIsSelectable="false"
                />

            <TextView
                android:id="@+id/points_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginTop="10sp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/rounded_corner_background"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textIsSelectable="false"
                />

            <TextView
                android:id="@+id/highest_lowest_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingHorizontal="5dp"
                android:background="@drawable/rounded_corner_background"
                android:text="Highest Scoring Code!"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="invisible"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textIsSelectable="false"
                />

        </LinearLayout>

        <CheckBox
            android:id="@+id/qrCodeCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="16dp"
            android:visibility="invisible"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

</LinearLayout>
