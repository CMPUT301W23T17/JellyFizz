<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/other_player_profile_frag"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerProfileFragment"
    android:background="@drawable/gradient_player_profile">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textpoint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="codes scanned"
            android:textColor="#7E7E7E"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textpoint3"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toEndOf="@+id/textpoint"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.463" />

        <TextView
            android:id="@+id/textpoint"
            android:layout_width="54dp"
            android:layout_height="19dp"
            android:text="points"
            android:textColor="#7E7E7E"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.112"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number_points"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:elevation="50dp"
            android:text="Email:"
            android:textAlignment="viewStart"
            android:textColor="#24366A"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_"
            app:layout_constraintStart_toStartOf="@+id/rectangle_"
            app:layout_constraintTop_toTopOf="@+id/rectangle_"
            app:layout_constraintVertical_bias="0.329" />

        <TextView
            android:id="@+id/mobile_phone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:elevation="50dp"
            android:text="Mobile Number:"
            android:textAlignment="viewStart"
            android:textColor="#24366A"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_"
            app:layout_constraintStart_toStartOf="@+id/rectangle_"
            app:layout_constraintTop_toTopOf="@+id/rectangle_"
            app:layout_constraintVertical_bias="0.609" />

        <TextView
            android:id="@+id/number_rank"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#DD6E6E"
            android:textColorLink="#D65F5F"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.697"
            app:layout_constraintStart_toEndOf="@+id/number_code"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.43" />

        <TextView
            android:id="@+id/number_code"
            android:layout_width="97dp"
            android:layout_height="29dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#DD6E6E"
            android:textColorLink="#D65F5F"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textpoint2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_name"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/number_points"
            android:layout_width="81dp"
            android:layout_height="30dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#DD6E6E"
            android:textColorLink="#D65F5F"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.075"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.428" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/rectangle_"
            android:layout_width="352dp"
            android:layout_height="105dp"
            android:background="@drawable/rectangle_2"
            android:elevation="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.613" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERNAME"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.344" />

        <TextView
            android:id="@+id/otherMoreButton"
            android:layout_width="57dp"
            android:layout_height="26dp"
            android:text="MORE >"
            android:textColor="#7E7E7E"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.805"
            app:layout_constraintStart_toEndOf="@+id/textpoint5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.764" />

        <TextView
            android:id="@+id/textpoint5"
            android:layout_width="125dp"
            android:layout_height="29dp"
            android:text="List of codes"
            android:textColor="#7E7E7E"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.101"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.767" />

        <TextView
            android:id="@+id/textpoint3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ranked"
            android:textColor="#7E7E7E"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.893"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.463" />


        <TextView
            android:id="@+id/otherFirstQrCodeImage"
            android:layout_width="165dp"
            android:layout_height="149dp"
            android:clickable="true"
            android:fontFamily="@font/unispace"
            android:gravity="center"
            android:src="@drawable/qrcode_image"
            android:textColor="@color/teal_200"
            android:text=""
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/otherSecondQrCodeImage"
            app:layout_constraintHorizontal_bias="0.192"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.972" />

        <TextView
            android:id="@+id/otherSecondQrCodeImage"
            android:layout_width="163dp"
            android:layout_height="150dp"
            android:clickable="true"
            android:fontFamily="@font/unispace"
            android:gravity="center"
            android:src="@drawable/qrcode_image"
            android:text=""
            android:textColor="@color/teal_200"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/otherFirstQrCodeImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.977" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/catlogo"
            app:civ_border_color="#F1207A"
            app:civ_border_width="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.083" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>