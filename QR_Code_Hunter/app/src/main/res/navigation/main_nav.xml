<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/player_profile_screen">
    <activity
        android:id="@+id/home_screen"
        android:name="com.example.qr_code_hunter.MainActivity"
        android:label="main_activity"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/search_screen"
        android:name="com.example.qr_code_hunter.SearchFragment"
        android:label="search_screen"
        tools:layout="@layout/fragment_searching" />
    <fragment
        android:id="@+id/map_screen"
        android:name="com.example.qr_code_hunter.MapFragment"
        android:label="map_screen"
        tools:layout="@layout/activity_google_maps" />
    <fragment
        android:id="@+id/ranking_screen"
        android:name="com.example.qr_code_hunter.RankingFragment"
        android:label="ranking_screen"
        tools:layout="@layout/fragment_ranking" />
    <fragment
        android:id="@+id/player_profile_screen"
        android:name="com.example.qr_code_hunter.PlayerProfileFragment"
        android:label="profile_screen"
        tools:layout="@layout/fragment_player_profile" />
</navigation>